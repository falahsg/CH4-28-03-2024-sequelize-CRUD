<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <h1>Hellow FSW 1 Tercinta!</h1>
    <% if (message != "") { %>
      <div class="alert">
        Data Berhasil <%= message %>
      </div>
      <% } %>
    <table>
      <th>id</th>
      <th>name</th>
      <th>age</th>
      <th>city</th>
      <th>email</th>
      <th>createdAt</th>
      <th>action</th>
      <% customers.map((customer) => { %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= customer.name %></td>
        <td><%= customer.age %></td>
        <td><%= customer.city %></td>
        <td><%= customer.email %></td>
        <td><%= customer.createdAt %></td>
        <td>
          <a href="/customers/edit/<%= customer.id %>"><button>Edit</button></a>
          <a href="/customers/admin/delete/<%= customer.id %>"><button>Delete</button></a>
        </td>
      </tr>
      <% }) %>
    </table>
    <a href="/customers/create"> <button>Halaman tambah data</button></a>
  </body>
</html>
